{% extends 'base.html.twig' %}
{% block body %}
    <div class="article-one">
        <article>
            <div class="row">
                <div class="col-lg-12">
                    <p class="h2">{{ post.getTitle() }}</p>
                </div>
                {% if post.getImageSrc() is not null %}
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="article-image">
                                <img src="{{ post.getImageSrc() }}" alt="{{ post.getImageDescription() }}">
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="content">
                    {{ post.getPreviewText()|purify }}
                </div>
            </div>
        </article>
    </div>
{% endblock %}
